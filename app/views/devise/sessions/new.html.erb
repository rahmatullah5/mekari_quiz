<div class="container h-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin align-items-center'}) do |f| %>
  <img class="mb-4" src="https://mekari.com/wp-content/uploads/2019/03/logo-mekari.svg" alt="">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
  <label for="inputPassword" class="sr-only">Password</label>

  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  <% if devise_mapping.rememberable? %>
  <div class="checkbox mb-3">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
  <% end %>
</div>
